contract challenge3 is Ownable{
    
    using SafeMath for uint256;
    
    enum TaskStatus {
        Incomplete,
        Complete
    }
    
    mapping(uint256 => Tasks) public todoList;
    
    struct Tasks {
        string name;
        TaskStatus status;
    }
    
    uint256 counter;
    
    constructor() public {
        counter = 0;
    }
    
    function addTask(string calldata _name) onlyOwner external {
        todoList[counter].name = _name;
        todoList[counter].status = TaskStatus.Incomplete;
        counter = counter.add(1);
    }
    
    function toggleTask(uint256 _index) onlyOwner external {
        if(todoList[_index].status == TaskStatus.Incomplete){
            todoList[_index].status = TaskStatus.Complete;
        } else{
            todoList[_index].status = TaskStatus.Incomplete;
        }
    }
    
}
